{
  "name": "ui-api-interface",
  "version": "1.0.0",
  "description": "Typescript implementation of a small slice of the Roblox API that covers UI instances along with the Roblox DataTypes and Enums relevant to them",
  "main": "dist/index.js",
  "files": ["dist"],
  "author": "",
  "license": "",
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0"
  },
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint",
      "@typescript-eslint/eslint-plugin",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:promise/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "prettier/prettier": "warn",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  }
}
